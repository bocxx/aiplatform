---

import BaseLayout from '@/layouts/BaseLayout'
import Hero from '@/components/base/Hero'
import ListCategories from '@/components/news/ListCategories'
import LatestNews from '@/components/news/LatestNews'
import ArticleGrid from '@/components/news/ArticleGrid'
import SmallArticleGrid from '@/components/news/SmallArticleGrid'

import { getCollection } from 'astro:content';
const allArticles = await getCollection('articles', ({ data }) => !data.draft);
// const featuredArticles = allArticles.filter(article => article.data.featured);
---

<BaseLayout title='Home'>
    <Hero />
    <ListCategories />
    <LatestNews />
    <!-- <ArticleGrid articles={featuredArticles} /> -->
    <ArticleGrid articles={allArticles} />
    <SmallArticleGrid />
   
	
</BaseLayout>

