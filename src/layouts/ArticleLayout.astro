---
import BaseLayout from '@/layouts/BaseLayout'
import ArticleSidebar from '@/components/base/ArticleSidebar'
import TableOfContents from '@/components/utils/TableOfContents';
const { title, description, image, articleDate, headings } = Astro.props
---

<BaseLayout title={title} description={description} image={image} articleDate={articleDate} headings={headings}>
	<slot />
	<ArticleSidebar slot="sidebar">
		<TableOfContents headings={headings} />
	</ArticleSidebar>
</BaseLayout>


