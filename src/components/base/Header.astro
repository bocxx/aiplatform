---
// import HeaderLink from '@/components/HeaderLink'
import TagIcon from "@/components/icons/TagIcon"
import FireIcon from '@/components/icons/FireIcon'
import ToggleTheme from "@/components/utils/ToggleTheme"
import { CATEGORIES } from '../../content/categories';
---

<header
  class="border-border/40 bg-background/95 supports-[backdrop-filter]:bg-background/60 sticky top-0 z-50 w-full backdrop-blur"
>
  <div class="container flex h-14 max-w-screen-2xl items-center">
    <!-- Main Nav -->
    <div class="mr-4 hidden md:flex">
      <a class="mr-4 flex items-center space-x-2 lg:mr-6" href="/">
        <img src="/AI-logo.png" alt="AI Logo" class="h-24 w-24 " />
      </a>

      <nav class="flex items-center gap-4 text-sm lg:gap-6">
        {[...CATEGORIES]
          .sort((a, b) => {
            if (a.name === 'Trending') return -1;
            if (b.name === 'Trending') return 1;
            return a.name.localeCompare(b.name); // Sort alphabetically
          })
          .map((category) => (
            <a
              class="flex items-center hover:text-foreground/80 text-foreground/60 transition-colors"
              href="/docs"
            >
              {category.name === 'Trending' && <FireIcon class="mr-2" />}
              {category.name}
            </a>
          ))}
      </nav>
    </div>
 

   

    <div
      class="flex flex-1 items-center justify-between space-x-2 md:justify-end"
    >
      <div class="w-full flex-1 md:w-auto md:flex-none">
        <button
          class="focus-visible:ring-ring border-input hover:bg-accent hover:text-accent-foreground bg-muted/50 text-muted-foreground relative inline-flex h-8 w-full items-center justify-start whitespace-nowrap rounded-[0.5rem] border px-4 py-2 text-sm font-normal shadow-none transition-colors focus-visible:outline-none focus-visible:ring-1 disabled:pointer-events-none disabled:opacity-50 sm:pr-12 md:w-40 lg:w-64"
        >
          <span class="hidden lg:inline-flex">Zoek nieuws...</span><span
            class="inline-flex lg:hidden">Zoeken..</span
          >

          <!-- <kbd class="bg-muted pointer-events-none absolute right-[0.3rem] top-[0.3rem] hidden h-5 select-none items-center gap-1 rounded border px-1.5 font-mono text-[10px] font-medium opacity-100 sm:flex"><span class="text-xs">âŒ˜</span>K</kbd> -->
        </button>
      </div>

      <nav class="flex items-center">
        <a target="_blank" rel="noreferrer" href="https://twitter.com/shadcn">
          <a target="_blank" rel="noreferrer" href="https://twitter.com/shadcn">
            <div
              class="focus-visible:ring-ring hover:bg-accent hover:text-accent-foreground inline-flex h-8 w-8 items-center justify-center whitespace-nowrap rounded-md px-0 py-2 text-sm font-medium transition-colors focus-visible:outline-none focus-visible:ring-1 disabled:pointer-events-none disabled:opacity-50"
            >
              <TagIcon /><span class="sr-only">Tags</span>
            </div></a
          >

          <div
            class="focus-visible:ring-ring hover:bg-accent hover:text-accent-foreground inline-flex h-8 w-8 items-center justify-center whitespace-nowrap rounded-md px-0 py-2 text-sm font-medium transition-colors focus-visible:outline-none focus-visible:ring-1 disabled:pointer-events-none disabled:opacity-50"
          >
            <ToggleTheme /><span class="sr-only">Toggle Theme</span>
          </div>
        </a>
      </nav>
    </div>
  </div>
</header>
